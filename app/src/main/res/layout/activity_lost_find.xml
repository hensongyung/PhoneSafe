<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical"
    tools:context="com.hensonyung.phonesafe.LostFindActivity">

    <TextView
        android:background="#8866ff00"
        android:textColor="#000000"
        android:textSize="22sp"
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:text="手机防盗"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="安全号码"
            android:textSize="22sp"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_safenumber"
            android:text="****"
            android:textColor="#000000"
            android:textSize="22sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </RelativeLayout>
    <View
        android:layout_marginTop="10dp"
        android:background="#000000"
        android:layout_width="fill_parent"
        android:layout_height="0.2dp"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="防盗保护是否开启"
            android:textSize="22sp"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
       <ImageView
           android:id="@+id/iv_protecting"
           android:src="@drawable/unlock"
           android:layout_width="25dp"
           android:layout_height="25dp"
           android:layout_alignParentRight="true"
           android:layout_marginRight="5dp"
           android:layout_marginTop="8dp"
          />
    </RelativeLayout>
    <View
        android:layout_marginTop="10dp"
        android:background="#000000"
        android:layout_width="fill_parent"
        android:layout_height="0.2dp"/>
    <TextView
        android:background="@drawable/shape_selected"
        android:clickable="true"
        android:onClick="reEnterSetup"
        android:text="重新进入设置向导"
        android:textSize="22sp"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_marginRight="8dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginTop="5dp"
        android:background="#44000000"
        android:layout_width="fill_parent"
        android:layout_height="0.2dp"/>
    <TextView
        android:background="#44000000"
        android:text="功能简介"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_marginRight="8dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:drawableLeft="@android:drawable/star_big_on"
        style="@style/text_content_style"
        android:text="GPS追踪:#*location*#"
        />
    <TextView
        android:drawableLeft="@android:drawable/star_big_on"
        style="@style/text_content_style"
        android:text="播放报警音乐:#*alarm*#"
        />

    <TextView
        android:drawableLeft="@android:drawable/star_big_on"
        style="@style/text_content_style"
        android:text="远程数据销毁:#*wipedata*#"
        />
    <TextView
        android:drawableLeft="@android:drawable/star_big_on"
        style="@style/text_content_style"
        android:text="远程锁屏:#*locksreen*#"
        />
</LinearLayout>
